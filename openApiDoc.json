{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Tool Link Manager"
    },
    "servers": [
        {
            "url": "https://toollinkmanager.herokuapp.com"
        }
    ],
    "paths": {
        "/tools": {
            "delete": {
                "tags": ["tools"],
                "security": [{
                    "bearerAuth":[]
                }],
                "description":"Exclui uma ferramenta pelo id",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Id unico da ferramenta que deseja ecluir",
                        "schema":{
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "post": {
                "tags": ["tools"],
                "security": [{
                    "bearerAuth":[]
                }],
                "description":"Inclui uma nova ferramenta",
                "requestBody":{
                    "description": "Inclui uma ferramenta com tags",
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/tools"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref": "#/components/schemas/tools"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "tools"
                ],
                "description": "Lista as ferramentas possiblitando a busca por tags",
                "security": [{
                    "bearerAuth":[]
                }],
                "parameters": [
                    {
                        "name": "tag",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/listTool"
                                }
                            }
                        }
                    },
                    "403":{
                        "description": "error on search",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/resetpassword": {
            "post": {
                "tags": [
                    "auth"
                ],
                "description": "Define uma nova senha do usuário a partir de um token de acesso",
                "requestBody":{
                    "description": "Utiliza o token que foi enviado por email para possibilitar o cadastro da nova senha",
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "required": [
                                    "email",
                                    "token",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "token": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Validate user email and token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/forgotpassword": {
            "post": {
                "tags": [
                    "auth"
                ],
                "description": "Recuperar a senha do usuário. É ncessario configurar as variaveis de ambiente para o envio do email.",
                "requestBody":{
                    "description": "Envia o token para o email cadastrado",
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "required": [
                                    "email"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Email not exist or not possible send email, check email paramters, host, post, user, password",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "tags": [
                    "auth"
                ],
                "description": "Cadastro do usuário",
                "requestBody":{
                    "description": "Nome, email e senha para registrar o usuário",
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "headers": {
                            "X-Token": {
                                "description": "token Bearer para acessar rotas privadas",
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "format": "int32"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Email exist to another user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Erro on register",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/authenticate": {
            "post": {
                "tags": [
                    "auth"
                ],
                "description": "Login de acesso",
                "requestBody":{
                    "description": "Email e senha do usuário",
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "headers": {
                            "X-Token": {
                                "description": "token Bearer para acessar rotas privadas",
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "format": "int32"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "User not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "incorrect password",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "problem on data base connection",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
   
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "apiKey",
                "in": "header",
                "description": "Bearer token [Bearer ???]",
                "name": "Authorization"
            }
        },
        "schemas": {
            "tools":{
                "type": "object",
                "properties": {
                    "id":{
                        "type": "integer",
                        "format": "int32"
                    },
                    "title":{
                        "type": "string"
                    },
                    "link":{
                        "type": "string"
                    },
                    "description":{
                        "type": "string"
                    },
                    "tags":{
                        "type": "array",
                        "items":{
                            "type": "object",
                            "properties": {
                                "name":{
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "listTool":{
                "type": "array",
                "items":{
                    "$ref":"#/components/schemas/tools"
                }
            },
            "Error": {
                "type": "object",
                "required": [
                    "error"
                ],
                "properties": {
                    "error": {
                        "type": "string"
                    }
                }
            }
        }
    }
}