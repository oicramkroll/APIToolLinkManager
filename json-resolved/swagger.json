{
  "openapi" : "3.0.1",
  "info" : {
    "title" : "Tool Link Manager",
    "version" : "1.0-oas3"
  },
  "servers" : [ {
    "url" : "https://toollinkmanager.herokuapp.com"
  } ],
  "paths" : {
    "/tools/{id}" : {
      "delete" : {
        "tags" : [ "tools" ],
        "description" : "Exclui uma ferramenta pelo id",
        "parameters" : [ {
          "name" : "id",
          "in" : "path",
          "description" : "id da ferramenta que será ecluida jundamente com suas tags",
          "required" : true,
          "style" : "simple",
          "explode" : false,
          "schema" : {
            "type" : "integer",
            "format" : "int32"
          }
        } ],
        "responses" : {
          "204" : {
            "description" : "OK"
          },
          "403" : {
            "description" : "RecordNotFound",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "security" : [ {
          "bearerAuth" : [ ]
        } ]
      }
    },
    "/tools" : {
      "get" : {
        "tags" : [ "tools" ],
        "description" : "Lista as ferramentas possiblitando a busca por tags",
        "parameters" : [ {
          "name" : "tag",
          "in" : "query",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/listTool"
                }
              }
            }
          },
          "403" : {
            "description" : "error on search",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "security" : [ {
          "bearerAuth" : [ ]
        } ]
      },
      "post" : {
        "tags" : [ "tools" ],
        "description" : "Inclui uma nova ferramenta",
        "requestBody" : {
          "description" : "Inclui uma ferramenta com tags",
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/tools"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "201" : {
            "description" : "OK",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/tools"
                }
              }
            }
          }
        },
        "security" : [ {
          "bearerAuth" : [ ]
        } ]
      }
    },
    "/auth/resetpassword" : {
      "post" : {
        "tags" : [ "auth" ],
        "description" : "Define uma nova senha do usuário a partir de um token de acesso",
        "requestBody" : {
          "description" : "Utiliza o token que foi enviado por email para possibilitar o cadastro da nova senha",
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/body"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "OK"
          },
          "401" : {
            "description" : "Validate user email and token",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/forgotpassword" : {
      "post" : {
        "tags" : [ "auth" ],
        "description" : "Recuperar a senha do usuário. É ncessario configurar as variaveis de ambiente para o envio do email.",
        "requestBody" : {
          "description" : "Envia o token para o email cadastrado",
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/body_1"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "OK"
          },
          "401" : {
            "description" : "Email not exist or not possible send email, check email paramters, host, post, user, password",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/register" : {
      "post" : {
        "tags" : [ "auth" ],
        "description" : "Cadastro do usuário",
        "requestBody" : {
          "description" : "Nome, email e senha para registrar o usuário",
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/body_2"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "OK",
            "headers" : {
              "X-Token" : {
                "description" : "token Bearer para acessar rotas privadas",
                "style" : "simple",
                "explode" : false,
                "schema" : {
                  "type" : "string"
                }
              }
            },
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/inline_response_200"
                }
              }
            }
          },
          "401" : {
            "description" : "Erro on register",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Error"
                }
              }
            }
          },
          "403" : {
            "description" : "Email exist to another user",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/authenticate" : {
      "post" : {
        "tags" : [ "auth" ],
        "description" : "Login de acesso",
        "requestBody" : {
          "description" : "Email e senha do usuário",
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/body_3"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "OK",
            "headers" : {
              "X-Token" : {
                "description" : "token Bearer para acessar rotas privadas",
                "style" : "simple",
                "explode" : false,
                "schema" : {
                  "type" : "string"
                }
              }
            },
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/inline_response_200_1"
                }
              }
            }
          },
          "400" : {
            "description" : "User not found",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Error"
                }
              }
            }
          },
          "401" : {
            "description" : "incorrect password",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Error"
                }
              }
            }
          },
          "500" : {
            "description" : "problem on data base connection",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "tools" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer",
            "format" : "int32"
          },
          "title" : {
            "type" : "string"
          },
          "link" : {
            "type" : "string"
          },
          "description" : {
            "type" : "string"
          },
          "tags" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/tools_tags"
            }
          }
        }
      },
      "listTool" : {
        "type" : "array",
        "items" : {
          "$ref" : "#/components/schemas/tools"
        }
      },
      "Error" : {
        "required" : [ "error" ],
        "type" : "object",
        "properties" : {
          "error" : {
            "type" : "string"
          }
        }
      },
      "body" : {
        "required" : [ "email", "password", "token" ],
        "type" : "object",
        "properties" : {
          "email" : {
            "type" : "string"
          },
          "token" : {
            "type" : "string"
          },
          "password" : {
            "type" : "string"
          }
        }
      },
      "body_1" : {
        "required" : [ "email" ],
        "type" : "object",
        "properties" : {
          "email" : {
            "type" : "string"
          }
        }
      },
      "body_2" : {
        "required" : [ "email", "name", "password" ],
        "type" : "object",
        "properties" : {
          "name" : {
            "type" : "string"
          },
          "email" : {
            "type" : "string"
          },
          "password" : {
            "type" : "string"
          }
        }
      },
      "inline_response_200" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer",
            "format" : "int32"
          }
        }
      },
      "body_3" : {
        "required" : [ "email", "password" ],
        "type" : "object",
        "properties" : {
          "email" : {
            "type" : "string"
          },
          "password" : {
            "type" : "string"
          }
        }
      },
      "inline_response_200_1" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer",
            "format" : "int32"
          },
          "email" : {
            "type" : "string"
          },
          "name" : {
            "type" : "string"
          }
        }
      },
      "tools_tags" : {
        "type" : "object",
        "properties" : {
          "name" : {
            "type" : "string"
          }
        }
      }
    },
    "securitySchemes" : {
      "bearerAuth" : {
        "type" : "apiKey",
        "description" : "Bearer token [Bearer ???]",
        "name" : "Authorization",
        "in" : "header"
      }
    }
  }
}